@model PresentationLayer.Models.ClientViewModel

<h2>Delete Client</h2>

<h3>Are you sure you want to delete this?</h3>

<dl class="row">
    <dt class="col-sm-2">ID</dt>
    <dd class="col-sm-10">@Model.ClientId</dd>

    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">BirthDate</dt>
    <dd class="col-sm-10">@Model.BirthDate.ToShortDateString()</dd>

</dl>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.ClientId">
    <input type="hidden" asp-for="ClientId" />
    <button type="submit" class="btn btn-danger">Delete</button>
</form>
